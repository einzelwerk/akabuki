mixin blog(blogList, title)
  section.blog.section
    .blog__container.container.column
      h2.blog__title.title=title
      .slider-full-width.slider-full-width_right.slider-fog.slider-fog_right
        .swiper.blog__slider 
          ul.swiper-wrapper 
            each blog in blogList
              li.swiper-slide
                a.blog__link(href="blog.html") 
                  .blog__img-block
                    picture.blog__img-wrap.wh100
                      if blog.srcMobile
                        source(media="(max-width: 991.98px)", srcset=blog.srcMobile)
                      img.blog__img(src=blog.src, alt="")
                    span.blog__date.btn.btn_white=blog.date
                  h3.blog__name=blog.name
      button.blog__more.btn.btn_circle(type="button") Читать ещё
