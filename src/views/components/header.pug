include ../partials/nav
include ../partials/menu

mixin header 
  +menu
  header.header
    .header__container.container
      a.header__logo(href="index.html")
        svg.header__logo-icon
          use(xlink:href="./assets/sprite.svg#logo-header")
      .header__content
        +nav([
          {content: 'Обо мне', href: 'about.html'},
          {content: 'Услуги', href: 'services.html'},
          {content: 'Кейсы', href: 'cases.html'},
          {content: 'Полезные материалы', href: 'materials.html'},
          {content: 'Блог', href: 'blog.html'},
          {content: 'Контакты', href: 'contacts.html'},
        ], true, 'header__nav')
        select.select.header__lang.lang
          option(value="Ам") Ам
          option(value="Ру") Ру
          option(value="Ан") Ан
        button.header__bid.btn.btn_dark(type="button" data-popup-open="contact") Заявка
      .header__bar
        .header__burger
          span.header__burger-item
          span.header__burger-item
          span.header__burger-item
