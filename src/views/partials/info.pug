mixin info(data)
  - const classContentOrder = data.contentOrder ? 'info__content-order' : '';
  - const classContentOrderMobile = data.contentOrderMobile ? 'info__content-order_mobile' : '';
  - const classContentTop = data.top ? 'info_top' : '';
  .info(class=classContentTop)
    .info__content(class=`${classContentOrder} ${classContentOrderMobile}`)
      .info__text-block
        h2.info__title=data.title
        if data.desc
          p.info__desc=data.desc 
        if data.list
          ul.info__list   
            each item in data.list
              li.info__item=item
      if data.link
        a.info__link.btn_big.btn.btn_trs-black(href=data.link.href)
          =data.link.text
          svg.btn__icon
            use(xlink:href="./assets/sprite.svg#arrow-right")
    .info__img-block
      picture.info__img-wrap.wh100
        img.info__img(src=data.src, alt="")
      if data.imgInfo 
        .info__img-info
          each text, idx in data.imgInfo
            if idx % 2 === 0
              .btn.btn_white=text
            else
              .btn.btn_dark=text 
      