mixin checkbox(data, className)
  - const classDark = data.isDark ? 'checkbox_dark' : ''
  label.checkbox(class=`${classDark} ${className}`)
    input.visually-hidden.checkbox__flag(type="checkbox" name=data.name)
    span.checkbox__custom
      svg.checkbox__custom_active
        use(xlink:href="./assets/sprite.svg#check")
    span.checkbox__text
      block

mixin input(data, className)
  - const classDark = data.isDark ? 'input_dark' : ''
  div(class=className)
    label.visually-hidden(for=data.name) 
    input.input(class=classDark id=data.name placeholder=data.placeholder name=data.name type=data.type)

mixin textarea(data, className)
  - const classDark = data.isDark ? 'input_dark' : ''
  div(class=className)
    label.visually-hidden(for=data.name) 
    textarea.input(class=classDark id=data.name rows="1" placeholder=data.placeholder name=data.name)

